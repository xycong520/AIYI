<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutQuestionHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_bg"/>
    <LinearLayout
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xjk_main_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llyt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xjk_doctor_man"
                android:text="男"
                android:textSize="@dimen/txt_size_12" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="张郭斌"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_size_12" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#ff0000"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xjk_main_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="男，"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/sex"
                android:text="26岁"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/age"
                android:text="免费咨询"
                android:textColor="#f69702"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llyt_name"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="请问医生如何提高性能力"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/txt_size_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:text="2015-04-02 14:50"
                android:textColor="#9d9796"
                android:textSize="@dimen/txt_size_10" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
