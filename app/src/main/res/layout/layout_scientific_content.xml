<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/txt_size_16" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/text_color"
        android:textSize="@dimen/txt_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/iv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/color_white"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/xjk_scientific_support_select"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="非常赞"
                android:textColor="@color/xjk_tv_attention_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_support_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_support"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/xjk_scientifit_num_bg_selector"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:text="5"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/tv_support_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_support"
                android:text="+1"
                android:textColor="@color/xjk_title_text_color"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/color_white"
                android:clickable="false"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/xjk_scientific_collect_select"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="收藏"
                android:textColor="@color/xjk_tv_attention_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/iv_ask_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/color_white"
                android:clickable="false"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/xjk_scientific_ask_doctor_select"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="问专家"
                android:textColor="@color/xjk_tv_attention_selector" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>