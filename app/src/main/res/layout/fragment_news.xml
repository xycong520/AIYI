<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        app:tl_divider_color="#1A000000"
        app:tl_divider_padding="5dp"
        app:tl_divider_width="0dp"
        app:tl_indicator_color="@color/xjk_title_text_color"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="25dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/xjk_title_text_color"
        app:tl_textUnselectColor="@color/text_color_666"
        app:tl_textsize="@dimen/txt_size_14"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout"></android.support.v4.view.ViewPager>

</LinearLayout>