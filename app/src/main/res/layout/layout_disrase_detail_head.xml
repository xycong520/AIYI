<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/xjk_next_icon"
        android:padding="@dimen/xjk_main_margin"
        android:text="病情详解"
        android:textColor="@color/color_black"
        android:textSize="@dimen/txt_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xjk_indicator_now"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="疾病说明"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xjk_indicator_now"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="临床表现"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xjk_indicator_now"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="病因"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xjk_indicator_now"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="预防"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xjk_indicator_now"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="检查和诊断"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/txt_size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/txt_size_15" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/xjk_main_margin"
        android:paddingTop="@dimen/xjk_main_margin"
        android:text="相关案例"
        android:textColor="@color/color_black"
        android:textSize="@dimen/txt_size_15" />
</LinearLayout>