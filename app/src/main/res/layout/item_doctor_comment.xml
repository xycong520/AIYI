<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="19.5dp"
        android:text="迷一样的男子"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_name"
        android:text="很满意"
        android:textColor="#ffb018"
        android:textSize="13dp" />
    <TextView
        android:id="@+id/evaluate_1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/xjk_assess_bg"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="意见很有帮助"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/txt_size_12" />

    <TextView
        android:id="@+id/evaluate_2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/evaluate_1"
        android:background="@drawable/xjk_assess_bg"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="意见很有帮助"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/txt_size_12" />

    <TextView
        android:id="@+id/evaluate_3"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/evaluate_2"
        android:background="@drawable/xjk_assess_bg"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="意见很有帮助"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/txt_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluate_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/evaluate_4"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/xjk_assess_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="意见很有帮助"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluate_4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:paddingBottom="13dp"
            android:text="非常专业"
            android:textColor="@color/color_black"
            android:textSize="15sp" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg"/>
    </LinearLayout>
</RelativeLayout>