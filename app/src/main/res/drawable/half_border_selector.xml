<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下 -->
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="20dip" android:bottomRightRadius="0dip" android:topLeftRadius="20dip" android:topRightRadius="0dip" />
            <gradient android:endColor="#44000000" android:startColor="#44000000" />
            <stroke android:width="1dp" android:color="@color/xjk_title_text_color" />
        </shape>
    </item>
    <!-- 正常 -->
    <item>
        <shape>
            <corners android:bottomLeftRadius="20dip" android:bottomRightRadius="0dip" android:topLeftRadius="20dip" android:topRightRadius="0dip" />
            <gradient android:endColor="@color/color_white" android:startColor="@color/color_white" />
            <stroke android:width="1dp" android:color="@color/xjk_title_text_color" />
        </shape>
    </item>

</selector>