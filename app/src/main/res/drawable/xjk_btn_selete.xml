<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
            <stroke android:width="0.5dp" android:color="@color/color_gray" />

            <gradient android:endColor="#ffffff" android:startColor="#ffffff" />
        </shape>
    </item>
    <!-- 正常 -->
    <item>
        <shape>
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
            <stroke android:width="0.5dp" android:color="@color/color_gray" />

            <gradient android:endColor="#ffffff" android:startColor="#ffffff" />
        </shape>
    </item>
</selector>